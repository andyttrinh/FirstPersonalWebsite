<% include ./partials/header %>

<div class="container">
    <h1>Create a new Project!</h1>
    <form action="/projects" method=POST>
        <div class="form-group">
            <label for="projectTitle">Project Title</label>
            <input type="text" class="form-control" placeholder="Project's Title" name="project[projectTitle]">
        </div>
        <div class="form-group">
            <label for="projectDescription">Project Description</label>
            <div>
                <textarea rows="4" cols="155" class="form-control" name="project[projectDescription]"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="projectLink">Github Link</label>
            <input type="text" class="form-control" placeholder="Github Link" name="project[projectLink]">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<% include ./partials/footer %>