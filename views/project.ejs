<% include ./partials/header %>
<!-- image -->
<div>
    <img id="project-pic" src="https://images.unsplash.com/photo-1519893578517-3252b77e8fdf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1349&q=80">
</div>

<!-- jumbotron -->
<div class="container-fluid">
        <div class="row jumbotron">
            <div class="container">
            <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-10">
                <p class="lead"> </p>
            </div>
            <h1 id="social_title">Projects</h1>
            <div class="social-icon">
            <p class="writing">Hi, welcome to my project portfolio, where I post all of my projects that I have finished. I hope you enjoy!</p>
            <i id="smiley" class="fas fa-smile-beam"></i>
            </div>
        </div>
        </div>
    </div>

<div class="container">
    <h1>This is the project page</h1>
    <hr>
    <% projects.forEach(function(project){ %>
    <div class="project-box">
        <h1><%= project.projectTitle %></h1>
        <p><%=  project.projectDescription %></p>
        <a href="<%= project.projectLink %>"><i class="fab fa-github-square project-link" ></i></a>
    </div>
    <% }) %>
</div>

<% include ./partials/footer %>